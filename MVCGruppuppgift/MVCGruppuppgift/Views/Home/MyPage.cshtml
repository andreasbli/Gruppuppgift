@model IEnumerable<MVCGruppuppgift.Models.program>
@{
    ViewBag.Title = "Min Sida";
}
<div class="addChannel">
    <input class="btn btn-primary" id="favoriteChannelButton" type="button" value="Lägg till favorit kanal" onclick="location.href='@Url.Action("chanlist", "Home")'" />

</div>
<div class="favoriteChannels">
    @foreach (int channel in ViewBag.favoritelist)
    {
        <div class="channel">

            @if (channel == 1)
            {
                <h3 class="channels">SVT1</h3>
            }
            else if (channel == 2)
            {
                <h3 class="channels">SVT2</h3>
            }
            else if (channel == 3)
            {
                <h3 class="channels">TV3</h3>
            }
            else if (channel == 4)
            {
                <h3 class="channels">TV4</h3>
            }
            else if (channel == 5)
            {
                <h3 class="channels">TV6</h3>
            }
            @foreach (var program in Model)
            {
                if (channel == program.FK_channelid)
                {

                    <ul class="programs list-unstyled row">
                        <li>
                            <b><a>@program.time_from @program.name</a></b>
                        </li>

                    </ul>

                }
            }



        </div>

    }
</div>
